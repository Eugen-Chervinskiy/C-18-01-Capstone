@{ 
  Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Login", "User"))
{
    <div class="form-group">
        <div class="row">
        <div class="col-md-2 col-md-offset-2">
            @Html.Label("Login")
        </div>
        <div class="col-md-4">
            @Html.TextBox("Login", "", new { @class = "form-control" })
        </div>  
        </div>                  
    </div>

    <div class="form-group">
        <div class="row">
        <div class="col-md-2 col-md-offset-2">
            @Html.Label("Password")
        </div>
        <div class="col-md-4">
            @Html.Password("Password", "", new { @class = "form-control" })
        </div>
        </div>
         
    </div>
        
    <div class="form-group">
        <div class="row">
        <div class="col-md-2 col-md-offset-4">
            <input class="btn btn-default form-control" type="submit" value="OK" />
        </div>
        </div>
    </div>
}